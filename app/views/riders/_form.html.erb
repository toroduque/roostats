<div class="form-group">
  <label>First Name</label>
  <%= f.text_field :first_name, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Last Name</label>
  <%= f.text_field :last_name, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Email</label>
  <%= f.text_field :email, class: 'form-control' %>
</div>
<div class="form-group">
<label>City</label>
  <%= f.text_field :city, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Password</label>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
</div>
<div class="form-group">
  <label>Password Confirmation</label>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
</div>

<hr>
<%= f.fields_for :contract do | ff | %>
<div class="form-group">
  <label>Vehicle</label>
  <div class="row">
    <div class="col-xs-6 select-signup">
      <%= image_tag("bicycle.svg", :alt => "Bicycle") %>
      <p>Bicycle</p>
      <%= ff.radio_button :vehicle, "Bicycle", class: 'radio-inline' %>
    </div>
    <div class="col-xs-6 select-signup">
      <%= image_tag("scooter.svg", :alt => "Scooter") %>
      <p>Scooter / Motorcycle</p>
      <%= ff.radio_button :vehicle, "Scooter", class: 'radio-inline' %>
    </div>
  </div>
</div>

<hr>

<div class="form-group">
  <label>Contract Type</label>
  <div class="row">
    <div class="col-xs-6 select-signup">
      <%= image_tag("hourly.svg", :alt => "Hourly") %>
      <p>Hourly</p>
      <%= ff.radio_button :contract_type, "Hourly", class: 'radio-inline' %>
    </div>
    <div class="col-xs-6 select-signup">
      <%= image_tag("dropOff.svg", :alt => "Drop-off") %>
      <p>Drop-off</p>
      <%= ff.radio_button :contract_type, "Drop-off", class: 'radio-inline' %>
    </div>
  </div>
</div>
<% end %>

<hr>
