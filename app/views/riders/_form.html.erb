<div class="form-group">
  <label>First Name</label>
  <%= f.text_field :first_name, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Last Name</label>
  <%= f.text_field :last_name, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Email</label>
  <%= f.text_field :email, class: 'form-control' %>
</div>
<div class="form-group">
<label>City</label>
  <%= f.text_field :city, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Password</label>
  <%= f.password_field :password, class: 'form-control' %>
</div>
<%= f.fields_for :contract do | ff | %>
<div class="form-group">
  <label>Vehicle</label>
  <br>
    <%= ff.radio_button :vehicle, "Bicycle", class: 'radio-inline' %> Bicycle
    <%= ff.radio_button :vehicle, "Scooter", class: 'radio-inline' %> Scooter / Motorcycle
</div>
<div class="form-group">
  <label>Contract Type</label>
  <br>
  <%= ff.radio_button :contract_type, "Hourly", class: 'radio-inline' %> Hourly
  <%= ff.radio_button :contract_type, "Drop-off", class: 'radio-inline' %> Drop-off
</div>
<% end %>

