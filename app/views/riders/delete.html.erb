<% @page_title = "Delete Rider" %>

<br />
<%= link_to("<< Back to list", riders_path, :class => 'back-link') %>
<br />

<div class="form-main">
  <p>Delete Rider</p>

  <%= form_for(@rider, :method => 'delete', :class => 'form-group') do |f| %>

    <p>
      Are you sure you want to permanently delete your account?
    </p>
    <p class="reference-name">
      <%= f.object.first_name %>
    </p>

    <div class="form-buttons">
      <%= f.submit "Delete Rider", :class => "save-button" %>
    </div>
  <% end %>
</div>
