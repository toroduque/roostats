<div class="form-group">
  <label>Date</label>
  <%= f.date_field :earnings_date, class: 'form-control', placeholder: "Date - mm/dd/yyyy" %>
</div>
<div class="form-group">
  <label>Hours Worked</label>
  <%= f.number_field :hours, class: 'form-control', placeholder: "Hours worked" %>
</div>
<div class="form-group">
  <label>Orders</label>
  <%= f.number_field :orders, class: 'form-control', placeholder: "Orders delivered" %>
</div>
<div class="form-group">
  <label>Tips</label>
  <%= f.number_field :tips, class: 'form-control input-currency', placeholder: "Hope a lot!" %>
</div>
