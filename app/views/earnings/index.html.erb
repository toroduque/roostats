<% @page_title = "Earnings History"  %>


<%= link_to("Back to main menu", riders_path, :class => 'back-link') %>
<br>

<div class="earnings-index">
  <p>Your Earnings</p>

  <%= link_to new_earning_path(:rider_id => @rider.id) do %>
    <div class="add-new-record">
      <%= image_tag("addNewRecord.svg", :alt => "Add New Record") %>
      <%= link_to("Add new record", new_earning_path(:rider_id => @rider.id)) %>
    </div>
  <% end %>

  <div class="earnings-stats-bg">
    <div class="earnings-stats">
      <center>
        <h4>Earnings to date</h4>
        <h4><%= Time.now.strftime("%d/%m/%Y") %></h4>
        <h2><%= @totalEarnings %></h2>
      </center>
    </div>
  </div>

  <table class="table" summary="Earnings list">
    <tr>
      <th>Date</th>
      <th>Hours</th>
      <th class="hide-column">Orders</th>
      <th class="hide-column">Tips</th>
      <th>Total</th>
      <th>Avg Hour</th>
      <th>Actions</th>
    </tr>
    <% @earnings.each do |earning| %>
    <tr>
      <td><%= earning.earnings_date %></td>
      <td><%= earning.hours %></td>
      <td class="hide-column"><%= earning.orders %></td>
      <td class="hide-column"><%= earning.tips %></td>
      <td><%= earning.total_earnings %></td>
      <td><%= earning.total_earnings %></td>
      <td>
        <%= link_to("Edit", edit_earning_path(earning, :rider_id => @rider.id), :class => 'action edit') %>
        <%= link_to("Delete", delete_earning_path(earning, :rider_id => @rider.id), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
