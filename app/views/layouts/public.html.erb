<!DOCTYPE html>
<html>
  <head>
    <title>Roostats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
      <nav class="navbar navbar-default">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to("roostats", root_path, :class => "navbar-brand") %>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to("About", '/public/about') %></li>
              <li><%= link_to("Tips", '/public/tips') %></li>
              <li><%= link_to("Contact", '/public/contact') %></li>
              <li><%= link_to("Login", rider_session_path ) %></li>
              <li><%= link_to("Sign Up", new_rider_path) %></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>

      <div class="container">
        <%= yield %>
      </div>


      <footer>
        <div class="container">
          <ul>
            <li><%= link_to("About", '/public/about' ) %></li>
            <li><%= link_to("Tips", '/public/tips') %></li>
            <li><%= link_to("Contact", '/public/contact') %></li>
            <li><%= link_to("Private Policy", '#') %></li>
            <li><%= link_to("Login", rider_session_path ) %></li>
            <li><%= link_to("Sign Up", new_rider_path) %></li>
          </ul>
        </div>
      </footer>
  </body>
</html>
